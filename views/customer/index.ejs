  </div>
</div>

<% if(message) { %>
<div class="alert alert-success" role="alert">
  <%= message %>
</div>
<%
        }%>

<table class="table table-dark" style="margin-top: 20px">
  <thead>
    <tr>

      <th scope="col">ပုံ</th>
      <th scope="col">ဇာတ်ကား အိုင်ဒီ</th>
      <th scope="col">နာမည်</th>
      
      <th scope="col">ငှားခ</th>
      <th scope="col">အမျိုးအစား</th>
      <th scope="col">ကျန်သောခွေ</th>

      <th scope="col"></th>
      <!-- <th scope="col" colspan=""></th> -->
    </tr>
  </thead>
  <tbody>
    <% movies.forEach(function(movie) { %>
    <tr>

      <td>
        <img width="100" height="100" class="img-thumbnail" src=" <%= movie.poster %>" />
      </td>

      <td><%=movie.movieId %></td>
      <td><%=movie.name %></td>
      <td><%=movie.price %></td>
      <td><%=movie.type.toString() %></td>
      <td><%=movie.available %> ခွေ</th>
      <td>
        <form style="display: inline" method="GET" action="/customer/<%= id%>/rent/<%=movie.movieId%>">         
         
          <% if(movie.available > 0) { %>
            <button type="submit" class="btn btn-warning" >ငှားမည်</button>
            <%
          }%>
           
           <% if(movie.available <= 0) { %>
           <a class="btn btn-primary" href="/customer/<%=id%>/order/<%=movie.movieId %>">အော် ဒါ</a>
            <%
          }%>
        
        </form>
       
      </td>
    </tr>
    <% }) %>
  </tbody>
</table>

