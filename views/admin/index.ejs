<%- include('../partials/header') %>
<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
  <a class="navbar-brand" href="#">PresentVcd</a>
</nav>
<br />

<a
  type="button"
  href="/admin/add"
  style="margin: 20px"
  class="btn btn-info btn-lg"
>
  ဇာတ်ကားထည့် မည်
</a>

<a
  type="button"
  href="/admin/viewRent"
  style="margin: 20px"
  class="btn btn-success btn-lg"
>
  ငှားရမ်းထားသူများစာရင်း
</a>

<a
  type="button"
  href="/admin/offlineRent"
  style="margin: 20px"
  class="btn btn-success btn-lg"
>
  ဆိုင်လာငှားစာရင်းထည့်ရန်
</a>

<a
  type="button"
  href="/admin/view-order"
  style="margin: 20px"
  class="btn btn-success btn-lg"
>
  ကြိုမှာထားသူများ
</a>

<a
  type="button"
  href="/admin/view-member"
  style="margin: 20px"
  class="btn btn-success btn-lg"
>
  မန်ဘာများကြည့်ရန်
</a>

<a
  type="button"
  href="/admin/logout"
  style="margin: 20px"
  class="btn btn-success btn-lg"
>
logout
</a>

<% if(message) { %>
<div class="alert alert-success" role="alert"><%= message %></div>
<% }%>

<table class="table table-dark" style="margin-top: 20px">
  <thead>
    <tr>
      <th scope="col">ပုံ</th>
      <th scope="col">ဇာတ်ကား အိုင် ဒီ</th>
      <th scope="col">နာမည်</th>

      <th scope="col">ငှားခ</th>
      <th scope="col">အမျိုးအစား</th>
      <th scope="col">ကျန်ရှိသောခွေ</th>

      <th scope="col"></th>
      <!-- <th scope="col" colspan=""></th> -->
    </tr>
  </thead>
  <tbody>
    <% movies.forEach(function(movie) { %>
    <tr>
      <td>
        <img
          width="100"
          height="100"
          class="img-thumbnail"
          src=" <%= movie.poster %>"
        />
      </td>

      <td><%=movie.movieId %></td>
      <td><%=movie.name %></td>
      <td><%=movie.price %></td>
      <td><%=movie.type.toString() %></td>
      <td><%=movie.available %></td>

      <td>
        <form style="display: inline">
          <a
            class="btn btn-success"
            style="width: 70px"
            href="/admin/edit/<%=movie.movieId%>"
            role="button"
            >ပြင်ရန်</a
          >
        </form>
        <form
          style="display: inline"
          action="/admin/deleteMovies"
          method="POST"
        >
          <input name="movieId" hidden value=<%=movie.movieId %> />
          <button
            type="submit"
            class="btn btn-outline-danger"
            style="width: 70px"
          >
            ဖျက်ရန်
          </button>
        </form>
      </td>
    </tr>
    <% }) %>
  </tbody>
</table>

<%- include('../partials/footer') %>
